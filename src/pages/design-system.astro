---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Design System | Vocalé">
  <section class="py-10 bg-cream">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-display font-bold text-primary-600 mb-6 text-center">Design System</h1>
      
      <div class="max-w-5xl mx-auto">
        <!-- Farben -->
        <div class="mb-10">
          <h2 class="text-xl font-display font-bold text-gray-800 mb-4 pb-1 border-b">Farbpalette</h2>
          
          <!-- Primary Colors (Altrosa) -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Primary (Altrosa)</h3>
            <div class="grid grid-cols-5 md:grid-cols-10 gap-2">
              <div>
                <div class="h-12 rounded bg-primary-50 mb-1"></div>
                <div class="text-xs">50</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-100 mb-1"></div>
                <div class="text-xs">100</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-200 mb-1"></div>
                <div class="text-xs">200</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-300 mb-1"></div>
                <div class="text-xs">300</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-400 mb-1"></div>
                <div class="text-xs">400</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-500 mb-1 text-white text-xs flex items-end p-1">500</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-600 mb-1 text-white text-xs flex items-end p-1">600</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-700 mb-1 text-white text-xs flex items-end p-1">700</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-800 mb-1 text-white text-xs flex items-end p-1">800</div>
              </div>
              <div>
                <div class="h-12 rounded bg-primary-900 mb-1 text-white text-xs flex items-end p-1">900</div>
              </div>
            </div>
          </div>
          
          <!-- Secondary Colors (Olivgrün) -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Secondary (Olivgrün)</h3>
            <div class="grid grid-cols-5 md:grid-cols-10 gap-2">
              <div>
                <div class="h-12 rounded bg-secondary-50 mb-1"></div>
                <div class="text-xs">50</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-100 mb-1"></div>
                <div class="text-xs">100</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-200 mb-1"></div>
                <div class="text-xs">200</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-300 mb-1"></div>
                <div class="text-xs">300</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-400 mb-1"></div>
                <div class="text-xs">400</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-500 mb-1 text-white text-xs flex items-end p-1">500</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-600 mb-1 text-white text-xs flex items-end p-1">600</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-700 mb-1 text-white text-xs flex items-end p-1">700</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-800 mb-1 text-white text-xs flex items-end p-1">800</div>
              </div>
              <div>
                <div class="h-12 rounded bg-secondary-900 mb-1 text-white text-xs flex items-end p-1">900</div>
              </div>
            </div>
          </div>
          
          <!-- Accent Colors (Burgunderrot) -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Accent (Burgunderrot)</h3>
            <div class="grid grid-cols-5 md:grid-cols-10 gap-2">
              <div>
                <div class="h-12 rounded bg-accent-50 mb-1"></div>
                <div class="text-xs">50</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-100 mb-1"></div>
                <div class="text-xs">100</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-200 mb-1"></div>
                <div class="text-xs">200</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-300 mb-1"></div>
                <div class="text-xs">300</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-400 mb-1"></div>
                <div class="text-xs">400</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-500 mb-1 text-white text-xs flex items-end p-1">500</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-600 mb-1 text-white text-xs flex items-end p-1">600</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-700 mb-1 text-white text-xs flex items-end p-1">700</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-800 mb-1 text-white text-xs flex items-end p-1">800</div>
              </div>
              <div>
                <div class="h-12 rounded bg-accent-900 mb-1 text-white text-xs flex items-end p-1">900</div>
              </div>
            </div>
          </div>
          
          <!-- Tertiary Colors (Gold) -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Tertiary (Gold)</h3>
            <div class="grid grid-cols-5 md:grid-cols-10 gap-2">
              <div>
                <div class="h-12 rounded bg-tertiary-50 mb-1"></div>
                <div class="text-xs">50</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-100 mb-1"></div>
                <div class="text-xs">100</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-200 mb-1"></div>
                <div class="text-xs">200</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-300 mb-1"></div>
                <div class="text-xs">300</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-400 mb-1"></div>
                <div class="text-xs">400</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-500 mb-1 text-white text-xs flex items-end p-1">500</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-600 mb-1 text-white text-xs flex items-end p-1">600</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-700 mb-1 text-white text-xs flex items-end p-1">700</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-800 mb-1 text-white text-xs flex items-end p-1">800</div>
              </div>
              <div>
                <div class="h-12 rounded bg-tertiary-900 mb-1 text-white text-xs flex items-end p-1">900</div>
              </div>
            </div>
          </div>
          
          <!-- Sonstige Farben -->
          <div>
            <h3 class="text-lg font-semibold mb-2">Sonstige Farben</h3>
            <div class="grid grid-cols-3 gap-2">
              <div>
                <div class="h-12 rounded bg-terracotta mb-1 text-white text-xs flex items-end p-1">terracotta</div>
              </div>
              <div>
                <div class="h-12 rounded bg-olive mb-1 text-white text-xs flex items-end p-1">olive</div>
              </div>
              <div>
                <div class="h-12 rounded bg-cream mb-1 text-xs flex items-end p-1">cream</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Typografie -->
        <div class="mb-10">
          <h2 class="text-xl font-display font-bold text-gray-800 mb-4 pb-1 border-b">Typografie</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Display Font -->
            <div>
              <h3 class="text-lg font-semibold mb-2">Playfair Display</h3>
              <div class="space-y-2">
                <div class="font-display text-3xl font-bold">Vocalé Frauenchor</div>
                <div class="font-display text-2xl">Vocalé Frauenchor</div>
                <div class="font-display text-xl">Vocalé Frauenchor</div>
              </div>
            </div>
            
            <!-- Body Font -->
            <div>
              <h3 class="text-lg font-semibold mb-2">Inter</h3>
              <div class="space-y-2">
                <div class="font-sans text-xl font-semibold">Vocalé Frauenchor</div>
                <div class="font-sans text-lg">Vocalé Frauenchor</div>
                <div class="font-sans text-base">Vocalé Frauenchor</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Komponenten -->
        <div class="mb-10">
          <h2 class="text-xl font-display font-bold text-gray-800 mb-4 pb-1 border-b">Komponenten</h2>
          
          <!-- Buttons -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Buttons</h3>
            <div class="flex flex-wrap gap-3">
              <button class="px-6 py-3 rounded-full shadow text-base font-semibold bg-primary-400 hover:bg-primary-500 text-white transition-colors border-2 border-primary-400">
                Primary Button
              </button>
              <button class="px-6 py-3 rounded-full shadow-sm text-base font-semibold bg-white hover:bg-primary-50 text-primary-400 border-2 border-primary-400 transition-colors">
                Secondary Button
              </button>
              <button class="px-6 py-3 rounded-full shadow-sm text-base font-semibold bg-secondary-400 hover:bg-secondary-500 text-white transition-colors border-2 border-secondary-400">
                Secondary Color
              </button>
            </div>
          </div>
          
          <!-- Cards -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Cards</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="bg-white rounded-2xl shadow-sm p-4">
                <h4 class="text-base font-semibold text-primary-600 mb-1">Card Titel</h4>
                <p class="text-sm text-gray-700">Standard Card mit weißem Hintergrund.</p>
              </div>
              <div class="bg-primary-50 rounded-2xl shadow-sm p-4">
                <h4 class="text-base font-semibold text-primary-600 mb-1">Primary Card</h4>
                <p class="text-sm text-gray-700">Card mit Primary-Farbakzent.</p>
              </div>
              <div class="bg-secondary-50 rounded-2xl shadow-sm p-4">
                <h4 class="text-base font-semibold text-secondary-600 mb-1">Secondary Card</h4>
                <p class="text-sm text-gray-700">Card mit Secondary-Farbakzent.</p>
              </div>
            </div>
          </div>
          
          <!-- Badges & Tags -->
          <div>
            <h3 class="text-lg font-semibold mb-2">Badges & Tags</h3>
            <div class="flex flex-wrap gap-2">
              <span class="inline-block bg-primary-100 text-primary-600 rounded-full px-3 py-1 text-sm font-medium">
                Primary Badge
              </span>
              <span class="inline-block bg-secondary-100 text-secondary-600 rounded-full px-3 py-1 text-sm font-medium">
                Secondary Badge
              </span>
              <span class="inline-block bg-accent-100 text-accent-600 rounded-full px-3 py-1 text-sm font-medium">
                Accent Badge
              </span>
              <span class="inline-block bg-tertiary-100 text-tertiary-600 rounded-full px-3 py-1 text-sm font-medium">
                Tertiary Badge
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>